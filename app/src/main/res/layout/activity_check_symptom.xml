<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Symptom_Precaution">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="1"

        android:rowCount="3"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/SYMPTOMS"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/Runny_nose"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:src="@drawable/runny_nose" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/RunnyNose"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/HEAd"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/headache"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/Headache"
                android:textAlignment="center"

                android:textColor="@color/Black" />



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Cough"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:src="@drawable/cough" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/Cough"
                android:textAlignment="center"

                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/Sore_Throat"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/sore_throat"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/SoreThroat"
                android:textAlignment="center"

                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/helvetica"
            android:text="@string/T_FEVER"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/fever"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"

                android:text="@string/Fever"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Difficulty_in_breathing"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/difficulty_in_breathing"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/DifficultyInBreathing"

                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/T_PRECAUTIONS"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica"
            android:text="@string/T_Wash_hands_frequently"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/washing_hands"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"

                android:text="@string/washHands"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/helvetica"
            android:text="@string/T_Do_not_touch_your_face"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="100dp"
                android:src="@drawable/do_not_touch_your_face"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/DoNotTouchYourFace"
                android:textAlignment="center"
                android:textColor="@color/Black" />



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Avoid_sick_people"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/avoid_sick_people"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/AvoidSickPeople"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Stay_in_home"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/stay_home_if_infected"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/StayInHome"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Keep_your_mouth_covered"
            android:textColor="@color/Black"
            android:textSize="24sp" />
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/keep_your_mouth_covered"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/KeepYourMouthCovered"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"

            android:text="@string/T_Maintain_cleanliness"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/CardView"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/maintain_cleanliness"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/MaintainCleanliness"
                android:textAlignment="center"
                android:textColor="@color/Black" />


        </androidx.cardview.widget.CardView>


    </GridLayout>


</ScrollView>
