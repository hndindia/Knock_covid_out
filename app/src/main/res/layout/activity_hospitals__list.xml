<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module.Hospitals_List"
    android:background="@color/LowerBackground"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/LowerBackground"
        tools:ignore="UselessParent">

        <HorizontalScrollView
            android:id="@+id/hscrll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/table_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                </TableLayout>

            </RelativeLayout>
        </HorizontalScrollView>

    </ScrollView>

    <TextView
        android:id="@+id/cg_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/care_center_cg"
        android:textColor="@color/Texts_color"
        android:textColorLink="@color/Hospital"
        android:textSize="18sp"
        android:padding="10dp"
        android:textAlignment="textStart"
        />

</LinearLayout>